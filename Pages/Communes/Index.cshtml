@section Scripts {
    <script src="~/assets/js/personal/commune.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
    <script>
      $(document).ready(function () {
          var showModal = '@ViewData["ShowCreateModal"]';
          if (showModal === 'True') {
              var myModal = new bootstrap.Modal(document.getElementById('createModal'));
              myModal.show();
          }
      });
    </script>
    <script>
      function exportSelectedCommunes() {
        const rows = document.querySelectorAll(".rowCheckbox:checked");
        const communes = [];

        rows.forEach(row => {
            const tr = row.closest("tr");
            communes.push({
                Id: parseInt(row.dataset.id),
                Region: tr.children[1].innerText,
                District: tr.children[2].innerText,
                Intitule: tr.children[3].innerText,
                Population: parseInt(tr.children[4].innerText),
                Etat: tr.children[5].innerText
            });
        });

        // Envoi au serveur
        const formData = new FormData();
        formData.append("CommunesJson", JSON.stringify(communes));

        fetch('/Communes/Index?handler=ExportExcel', {
            method: 'POST',
            body: formData
        })
        .then(res => res.blob())
        .then(blob => {
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = "Communes.xlsx";
            a.click();
        });
      }
    </script>
}