                <input type="text" class="form-control form-control-sm" id="communeName" asp-for="Commune.intitule" placeholder="Nom">
            </div>
            <div class="form-group">
                <label for="exampleSelectGender">District</label> 
                <select class="form-select" id="districtList" asp-for="Commune.IdDistrict">
                    @foreach (var item in Model.DistrictsValides)
                    {
                        if (Model.Commune != null && item.idDistrict == Model.Commune.IdDistrict)
                        {
                            <option value="@item.idDistrict" selected>@item.intitule</option>
                        }
                        else
                        {
                            <option value="@item.idDistrict">@item.intitule</option>
                        }
                    }

                </select>
            </div>
            <div class="mb-2">
                <label for="exampleSelectGender">Nombre de population</label> 
                <input type="number" class="form-control form-control-sm" id="communePop" asp-for="Commune.nombrePopulation" step="any" placeholder="Nombre de population">
            </div>
        </div>
        <div class="modal-footer p-2">
            <button type="button" class="btn btn-secondary btn" data-bs-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary btn" id="saveRegionBtn">Enregistrer</button>
        </div>
