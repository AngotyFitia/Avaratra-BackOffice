            <input type="number" id="Commune_longitude" class="form-control form-control-sm" step="any" asp-for="Commune.longitude"  placeholder="Longitude">
        </div>
        <div class="mb-2">
            <input type="number"  class="form-control form-control-sm" step="any"  placeholder="Nombre de population" asp-for="Commune.nombrePopulation">
