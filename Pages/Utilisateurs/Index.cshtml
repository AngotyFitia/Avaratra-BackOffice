@page
@model Avaratra.BackOffice.Pages_Utilisateurs.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = ViewData["Layout"]?.ToString();
}
@* <style>
    body {
        background-image: url('@ViewData["BackgroundImage"]');
    }
</style> *@
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0"  >
        <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto" >
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo" style="text-align:center">
                <img src="~/assets/images/logo.jpg" alt="logo">
                @* <img src="/assets/images/background.png" style="width:200px;" /> *@
            </div>
            <h6 class="font-weight-light">Veuillez vous connecter pour continuer.</h6>
            <form method="post" class="pt-3">
                <div class="form-group">
                    <input type="email" class="form-control form-control-sm"  placeholder="Adresse email" asp-for="Email">
                    <p style="text-align:center"><span asp-validation-for="Email" class="text-danger"></span></p>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-sm" placeholder="Mot de passe" asp-for="MotDePasse">
                    <p style="text-align:center"><span asp-validation-for="MotDePasse" class="text-danger"></span></p>
                </div>
                <div class="mt-3 d-grid gap-2"><button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"> Se connecter </button></div>
                <div class="text-center mt-4 font-weight-light"> Vous n'avez pas encore de compte?<a href="register.html" class="text-primary">Cr√©er</a></div>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert" style="border-radius:8px; font-weight:500;"> 
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"] </div>
                }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
            </div>
        </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="~/assets/css/personal_style/login.css" />
}
@section Scripts { <partial name="_ValidationScriptsPartial" /> }



